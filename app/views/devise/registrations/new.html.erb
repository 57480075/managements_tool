<div class="wrapper">
  <header class="second-header">
    <h1 class="main-title"><%= link_to 'MANEGEMENTS TOOL', root_path, class: "link "%></h1>
  </header>
  <div class="container">
    <h2 class="title">登録情報入力</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label "店舗名", class: "form-font" %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "例) 〇〇店", class: "form" %>
      </div>

      <div class="field">
        <%= f.label "メールアドレス", class: "form-font" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "PC・携帯どちらでも可", class: "form" %>
      </div>

      <div class="field">
        <%= f.label "パスワード", class: "form-font" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上の半角英数字", class: "form"  %>
      </div>

      <div class="field">
        <%= f.label "パスワード(確認)", class: "form-font" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "同じパスワードを入力してください", class: "form"  %>
      </div>

      <div class="actions">
        <%= f.submit "会員登録", class: "btn" %>
      </div>
    <% end %>
  </div>




</div>
